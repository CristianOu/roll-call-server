{
    "plugins": ["jest"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "max-len": ["error", { "code": 250 }],
        "no-plusplus": "off",
        "no-case-declarations": "off",
        "linebreak-style": "off",
        "comma-dangle": "off"
    }
}

